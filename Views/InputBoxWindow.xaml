<Window x:Class="WPF_GymProManager.Views.InputBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cambiar Cantidad" Height="150" Width="300" WindowStartupLocation="CenterScreen" Background="#D9D9D9" Icon="/logo.png" WindowStyle="None">
    <Border VerticalAlignment="Center" HorizontalAlignment="Center" Background="#D9D9D9"> 
        <Grid>
        <TextBlock Name="Texto" Text="Ingrese la nueva cantidad:" HorizontalAlignment="Center" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNuevaCantidad" HorizontalAlignment="Center" Margin="10,35,0,0" VerticalAlignment="Top" Width="120" MaxLength="3"/>
        <Button x:Name="btnAceptar" Content="Aceptar" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top" Width="75" Click="btnAceptar_Click"/>
        <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="100,75,0,0" VerticalAlignment="Top" Width="75" Click="btnCancelar_Click"/>
        </Grid>
    </Border>
</Window>
